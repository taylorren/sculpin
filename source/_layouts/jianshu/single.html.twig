{% set active =2 %}
{% extends 'layout.html.twig' %}
{% block wrapper %}
    <!-- ******CONTENT****** --> 
    <div class="content container">
        <div class="page-wrapper">
            <header class="page-heading clearfix">
                <h1 class="heading-title pull-left">{{page.title}}</h1>
                <div class="breadcrumbs pull-right">
                    <ul class="breadcrumbs-list">
                        <li class="breadcrumbs-label">你的位置：</li>
                        <li><a href="index.html">首页</a><i class="fa fa-angle-right"></i></li>
                        <li><a href="index.html">简书汇编</a><i class="fa fa-angle-right"></i></li>
                        <li class="current">{{page.title}}</li>
                    </ul>
                </div><!--//breadcrumbs-->
            </header> 
            <div class="page-content">
                <div class="row page-row">
                    <div class="news-wrapper col-md-8 col-sm-7">                         
                        <article class="news-item">
                            <p class="meta text-muted">作者：{{page.author}} | 发表时间：{{page.date|date('Y-m-d')}}</p>
                            <p class="meta text-muted">分类：<a href="/categories/{{page.category.0}}">{{page.category.0}}</a> | TAG：
                                {% for tag in page.tags%}
                                    <a href="/tags/{{tag}}">{{tag}}</a>&nbsp;
                                {% endfor %}
                            </p>
                            {{page.blocks.content|raw}}

                        </article><!--//news-item-->
                    </div><!--//news-wrapper-->
                    <aside class="page-sidebar  col-md-3 col-md-offset-1 col-sm-4 col-sm-offset-1 col-xs-12">                    
                        {% include 'category/list.html.twig' %}
                        {% include 'tag/list.html.twig' %}
                    </aside>
                </div><!--//page-row-->
            </div><!--//page-content-->
        </div><!--//page--> 
    </div><!--//content-->
{% endblock %}
